#set( $dollar = '$' )
<atlassian-plugin key="\${groupId}.\${artifactId}" name="\${artifactId}" plugins-version="2">
    <plugin-info>
        <description>${dollar}{project.description}</description>
        <version>${dollar}{project.version}</version>
        <vendor name="${dollar}{project.organization.name}" url="${dollar}{project.organization.url}" />
    </plugin-info>

    <servlet name="${artifactId}" class="${groupId}.ExampleServlet" key="test">
        <url-pattern>/test</url-pattern>
    </servlet>
</atlassian-plugin>
