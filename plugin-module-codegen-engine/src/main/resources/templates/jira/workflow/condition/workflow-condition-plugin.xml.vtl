<workflow-condition key="${MODULE_KEY}"
                   name="${MODULE_NAME}"
                   i18n-name-key="${NAME_I18N_KEY}"
                   class="${FQ_FACTORY_NAME}">

    <description key="${DESCRIPTION_I18N_KEY}">${DESCRIPTION}</description>

    <condition-class>${FQ_CLASSNAME}</condition-class>

    <resource type="velocity" name="view" location="templates/conditions/${MODULE_KEY}.vm"/>
    <resource type="velocity" name="input-parameters" location="templates/conditions/${MODULE_KEY}-input.vm"/>
    <resource type="velocity" name="edit-parameters" location="templates/conditions/${MODULE_KEY}-input.vm"/>

</workflow-condition>